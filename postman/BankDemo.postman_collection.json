{
  "info": {
    "name": "Bank Demo Mobile API (контракт)",
    "description": "Коллекция описывает ожидаемое поведение REST API для демо мобильного банка. Реального backend-сервера в проекте нет, поэтому запросы служат как контракт и база для тестирования/моков.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "fromAccountId",
      "value": "",
      "type": "string"
    },
    {
      "key": "toAccountId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "description": "Регистрация, логин и обновление токенов.",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+79990001122\",\n  \"pin\": \"1234\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "register"
              ]
            },
            "description": "Регистрирует пользователя по номеру телефона и ПИН. Возвращает userId, который используется для операций и токенов."
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+79990001122\",\n  \"pin\": \"1234\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "description": "Возвращает пару access/refresh токенов и время жизни access. Access нужен для всех защищённых запросов."
          }
        },
        {
          "name": "Refresh",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/refresh",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "refresh"
              ]
            },
            "description": "Обновляет сессию по refresh токену и возвращает новую пару токенов."
          }
        }
      ]
    },
    {
      "name": "Accounts",
      "description": "Операции со счетами пользователя.",
      "item": [
        {
          "name": "Create account",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Сберегательный\",\n  \"initialBalance\": 15000.00\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/accounts",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "accounts"
              ]
            },
            "description": "Создаёт новый счёт пользователя. Требуется access token."
          }
        }
      ]
    },
    {
      "name": "Dashboard",
      "description": "Главный экран: счета и последние транзакции.",
      "item": [
        {
          "name": "Get dashboard",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/dashboard",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "dashboard"
              ]
            },
            "description": "Возвращает список счетов пользователя и 10 последних транзакций."
          }
        }
      ]
    },
    {
      "name": "Transfers",
      "description": "Переводы между счетами пользователя.",
      "item": [
        {
          "name": "Transfer between accounts",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromAccountId\": \"{{fromAccountId}}\",\n  \"toAccountId\": \"{{toAccountId}}\",\n  \"amount\": 2500.00\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/transfers",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "transfers"
              ]
            },
            "description": "Переводит средства между счетами одного пользователя. Проверки: сумма > 0, доступ к счёту отправителя, достаточный баланс."
          }
        }
      ]
    }
  ]
}
